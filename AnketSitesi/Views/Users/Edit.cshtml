@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

@model EditViewModel
        <h2>Hesap Güncelleme</h2>
<form asp-action="Edit" asp-controller="Users" method="post">

    <input type="hidden" name="Id"  value="@Model.Id"/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
        <label asp-for="Email">E-mail Adresi </label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="UserName">
        <label asp-for="UserName">Kullanıcı Adı</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="FullName">
        <label asp-for="FullName">İsim ve Soyisim</label>
    </div>

    <div class="card">

        <div class="card-header">

            Parola Güncelleme
        </div>

    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
        <label asp-for="Password">Şifre</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password">
        <label asp-for="ConfirmPassword">Şifre tekrar</label>
    </div>

    <div class="card">
        <div class="card-header">

           Roller
        </div>

        <div class="card-header">

           @foreach(var role in ViewBag.Roles)
            {
             <div class="form-check">
                 <input type="checkbox" class="form-check-input" name="SelectedRoles" value="@role" id="@role"
                    @if (Model.SelectedRoles != null)
                    {



                        @(Model.SelectedRoles.Any(i => i == role) ? "checked" : "")
                    }
                    >
                    <label for="@role" class="form-check-label">@role </label>

             </div>

            }
        </div>

    </div>




    <div class="form-floating mb-3">
        <button type="submit" class="btn btn-outline-success">Güncelle</button>
    </div>
</form>

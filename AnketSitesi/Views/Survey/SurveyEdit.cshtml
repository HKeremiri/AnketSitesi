@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}


@model Anket
<h2>Anket Düzenleme  </h2>


<form asp-action="SurveyEdit" asp-controller="Survey" method="post">
    <input type="hidden" asp-for="AnketId" value="@Model.AnketId" />

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="SurveyCreateDate" value="@Model.SurveyCreateDate" />

    <div class="mb-3">
        <label class="form-label"><b>@User.Identity.Name</b></label>
        <input type="hidden" asp-for="CreatedBy" value="@Model.CreatedBy" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label"><b>Anket Adı</b></label>
        <input asp-for="AnketAdi" class="form-control" />
        <span asp-validation-for="AnketAdi" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label"><b>Anketin Açıklaması</b></label>
        <input asp-for="AnketDetay" class="form-control" />
        <span asp-validation-for="AnketDetay" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <div class="form-check">
            <input asp-for="AnketVisibility" class="form-check-input" />
            <label class="form-check-label">Anketi Herkese Açık Yap</label>
        </div>
    </div>







        



    <div>
        <button type="submit" class="btn btn-primary">Anketi Güncelle</button>
    </div>
</form>






@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}


@model IEnumerable<AppRole>



<h2>Rol Sayfası</h2>
<table class="table table-sm table-bordered" id="RoleIndex">
  <thead>
	<tr>      <th>Id</th>
	<th>Rol Adı</th>
	<th>Kullanıcı Adı</th>
	<th style="width:125px"> </th>
    </tr>
  </thead>
  
      
   
 @if(Model.Count()==0)
 {
     <tr><td colspan="4" class="text-center">Role Yok

     </td></tr>
 }

    @foreach (var role in Model)
    {
        <tr>
            <td>
                @role.Id
            </td>
            <td>@role.Name</td>
            <td >Kullanıcı Listesi </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@role.Id">Düzenle</a>
                <form asp-action="Delete" method="post">
                    <input type="hidden" value="@role.Id" name="id" />
                    <button type="submit" class="btn btn-danger" onclick="if (!confirm('Emin misiniz?')) { return false; }">Sil</button>
                </form>
               
            </td>
        </tr>
    }

</table>


<script>
    new DataTable('#RoleIndex', {
        language: {
            url: 'https://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json'
        }
    });
</script>


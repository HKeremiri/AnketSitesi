@{
	Layout = "~/Views/Shared/_Layout3.cshtml";
}

@model AppRole
<h2>Rol Güncelleme</h2>
<form asp-action="Edit" asp-controller="Roles" method="post">

    <input type="hidden" name="Id" value="@Model.Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
  
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name">
        <label asp-for="Name">Rol</label>
    </div>

	<table class="table table-sm table-bordered" id="RoleEdit">

		<thead>
			<tr>
				<th>	id		</th>
				<th>	Takma ad	</th>
				<th>	İsim Soyad	</th>
				<th>	Email		</th>
				<th> </th>

			</tr>


		</thead>

        <tbody>
            @if (ViewBag.Users != null)
			{



			
				@foreach (var user in ViewBag.Users)
				{
					<tr>
						<td>@user.Id</td>
						<td>@user.UserName</td>
						<td>@user.FullName</td>
						<td>@user.Email</td>

						<td>
							<a asp-action="Edit" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-primary">Düzenle</a>
						
						</td>
					</tr>
				}
			}
		</tbody>

	</table>

   
  



    <div class="form-floating mb-3">
        <button type="submit" class="btn btn-outline-success">Güncelle</button>
    </div>
</form>


<script>
	new DataTable('#RoleEdit', {
		language: {
			url: 'https://cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json'
		}
	});
</script>


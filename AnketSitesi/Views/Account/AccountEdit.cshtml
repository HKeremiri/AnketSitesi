@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
@model AccountEditViewModel
<h2>Hesap Ayarları</h2>

<form asp-action="AccountEdit" asp-controller="Account" method="post">

    <input type="hidden" name="Id" value="@Model.Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
        <label asp-for="Email">E-mail Adresi </label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="UserName">
        <label asp-for="UserName">Kullanıcı Adı</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="FullName">
        <label asp-for="FullName">İsim ve Soyisim</label>
    </div>

    <div class="card">

        <div class="card-header">

            Parola Güncelleme
        </div>

    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
        <label asp-for="Password">Şifre</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password">
        <label asp-for="ConfirmPassword">Şifre tekrar</label>
    </div>





    <div class="form-floating mb-3">
        <button type="submit" class="btn btn-outline-success">Güncelle</button>
    </div>
</form>

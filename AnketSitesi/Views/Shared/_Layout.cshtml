@if(TempData["message"]!= null)
{
    <div class="alert alert-warning">
        @TempData["message"]
    </div>

}
    



<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <link  href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/fontawesome/css/all.min.css" />
     <style>
        
        .left-ad {
            float: left;
            width: 200px; 
            margin-right: 20px; 
        }

       
        .right-ad {
            float: right;
            width: 200px; 
            margin-left: 20px; 
        }
    </style>

    <title>@ViewBag.Title - pollster</title>
</head>
<body >



    <nav class="navbar  navbar-expand-lg sticky-top font-sans-serif  " style="background-color:#5600ff; ">
            <div class="container-fluid">
            <a class="navbar-brand "  asp-controller="Home" asp-action="Index">
                <img src="/images/pollsterlogo.png" height="40" width="60" />

            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link active fa-solid fa-house fa-lg " style="color:white " aria-current="page" ></a>
                    </li>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="SurveyCreate" asp-controller="Survey">Anket Oluştur</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="GlobalSurveys" asp-controller="Survey">Herkese Açık Anket </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Home/SurveyJoinLink">Anket Listele</a>
                        </li>
                    }
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole ( "Admin"))
                        {

                            <li class="nav-item">
                                <a class="nav-link" asp-action="AdminPanel" asp-controller="Home">Admin Paneli</a>
                            </li>
                        }
                    }
                </ul>

                <ul ul class="nav navbar-nav ms-auto nav-item">

                    @if(User.Identity?.IsAuthenticated==true)
                    {
                        <li><a class="nav-link"> Merhaba, @User.Identity.Name</a></li>
                        <li><a asp-controller="Account" asp-action="Logout" class="nav-link"> Çıkış</a></li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/MySurvey">Anketlerim</a>
                        </li>
                    }
                    else
                    {

                        
                        <li><a asp-controller="Account" asp-action="Register" class="nav-link"> Kayıt ol</a></li>
                        <li><a asp-controller="Account" asp-action="Login" class="nav-link fa-solid fa-user"></a></li>
                        
                    }

                
                  
                </ul>
            </div>
        </div>
    </nav>
    

       


    
    <div class="container mt-3">
        <div class="row">
            <div class="col-lg-8 mx-auto ">
                <div class="card">
                    <div class="card-body">
                        @RenderBody()

                        @RenderSection("scripts", required: false)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        footer {
            position:relative;
            bottom: 0;
            left: 0;
           top:500px;
            width: 100%;
        }
    </style>


    <footer class="footer ">
        <!-- Copyright -->
        <div class="text-center text-bg-info p-3">
            © 2023 Copyright:
            <a class="text-body" href="#">www.pollster.com</a>
        </div>
    </footer>
</body>
</html> 